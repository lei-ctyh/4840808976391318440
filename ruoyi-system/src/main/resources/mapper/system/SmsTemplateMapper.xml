<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SmsTemplateMapper">

    <resultMap id="SmsTemplateResult" type="SmsTemplate">
        <id     property="templateId" column="template_id"/>
        <result property="orgCode"     column="org_code"/>
        <result property="boardType"  column="board_type"/>
        <result property="year"       column="year"/>
        <result property="fileName"   column="file_name"/>
        <result property="filePath"   column="file_path"/>
        <result property="fileExt"    column="file_ext"/>
        <result property="fileSize"   column="file_size"/>
        <result property="status"     column="status"/>
        <result property="remark"     column="remark"/>
        <result property="createBy"   column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy"   column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectSmsTemplateVo">
        select template_id, org_code, board_type, year, file_name, file_path, file_ext, file_size, status, remark, create_by, create_time, update_by, update_time from sms_template
    </sql>

    <select id="selectSmsTemplateById" parameterType="Long" resultMap="SmsTemplateResult">
        <include refid="selectSmsTemplateVo"/>
        where template_id = #{templateId}
    </select>

    <select id="selectSmsTemplateList" parameterType="SmsTemplate" resultMap="SmsTemplateResult">
        <include refid="selectSmsTemplateVo"/>
        <where>
            <if test="orgCode != null and orgCode != ''"> and org_code = #{orgCode}</if>
            <if test="boardType != null and boardType != ''"> and board_type = #{boardType}</if>
            <if test="year != null"> and year = #{year}</if>
            <if test="fileName != null and fileName != ''"> and file_name like concat('%', #{fileName}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectByUnique" resultMap="SmsTemplateResult">
        <include refid="selectSmsTemplateVo"/>
        where org_code = #{orgCode}
          and board_type = #{boardType}
          and year = #{year}
        limit 1
    </select>

    <insert id="insertSmsTemplate" parameterType="SmsTemplate" useGeneratedKeys="true" keyProperty="templateId">
        insert into sms_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orgCode != null and orgCode != ''">org_code,</if>
            <if test="boardType != null and boardType != ''">board_type,</if>
            <if test="year != null">year,</if>
            <if test="fileName != null and fileName != ''">file_name,</if>
            <if test="filePath != null and filePath != ''">file_path,</if>
            <if test="fileExt != null and fileExt != ''">file_ext,</if>
            <if test="fileSize != null">file_size,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            create_time,
         </trim>
         <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orgCode != null and orgCode != ''">#{orgCode},</if>
            <if test="boardType != null and boardType != ''">#{boardType},</if>
            <if test="year != null">#{year},</if>
            <if test="fileName != null and fileName != ''">#{fileName},</if>
            <if test="filePath != null and filePath != ''">#{filePath},</if>
            <if test="fileExt != null and fileExt != ''">#{fileExt},</if>
            <if test="fileSize != null">#{fileSize},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            sysdate(),
         </trim>
    </insert>

    <update id="updateSmsTemplate" parameterType="SmsTemplate">
        update sms_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="orgCode != null and orgCode != ''">org_code = #{orgCode},</if>
            <if test="boardType != null and boardType != ''">board_type = #{boardType},</if>
            <if test="year != null">year = #{year},</if>
            <if test="fileName != null and fileName != ''">file_name = #{fileName},</if>
            <if test="filePath != null and filePath != ''">file_path = #{filePath},</if>
            <if test="fileExt != null and fileExt != ''">file_ext = #{fileExt},</if>
            <if test="fileSize != null">file_size = #{fileSize},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </trim>
        where template_id = #{templateId}
    </update>

    <delete id="deleteSmsTemplateById" parameterType="Long">
        delete from sms_template where template_id = #{templateId}
    </delete>

    <delete id="deleteSmsTemplateByIds" parameterType="String">
        delete from sms_template where template_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>